
{{#each users}}
{{#if kitchen}}
<h1 style="text-align: center;">Your Kitchen </h1>
<p style="text-align: center;">Modify your Kitchen Here</p>
	<!--Hero-->
<div class="container relative items-center justify-center">
	<div class="container mx-auto flex flex-col md:flex-row items-center my-5 md:my-24">
		<!--Left Col-->
		<div id = "kitchenidvalue" data-id={{id}} class="flex flex-col w-full lg:w-1/2 justify-center items-center pt-4 pb-4 px-6 z-10">
			<p class="uppercase tracking-loose">{{kitchen.location}}</p>
			<p class="uppercase tracking-loose">{{kitchen.neighborhood}}</p>
			<h1 class="my-2 whitespace-nowrap">{{kitchen.kitchen_name}}</h1>
			<p class="leading-normal my-3 text-s">{{kitchen.description}}</p>
	<div class="buttons flex justify-around">
      <a id = "deleteKitchen" class="nav-link" href="#"><i class="material-icons mr-2 text-base ">delete</i></a>
      <a id = "addFood" class="nav-link" href="/addfood"><i class="material-icons mr-2 text-base ">add</i></a>

      </div>
			
		</div>
		<!--Right Col-->
		<div class="w-full lg:w-1/2 lg:py-6 text-center absolute z-0">
			<!--Add your product image here-->
            <img class="opacity-40 object-none h-48 w-100" src="{{kitchen.image_url}}" alt="">
		</div>
	</div>
</div>
<script src="./js/deleteKitchen.js"></script>
{{else}}
<a style="text-align: center;" href="/addkitchen"><h2>Click here to start a Kitchen</h2></a>
{{/if}}
{{/each}}
