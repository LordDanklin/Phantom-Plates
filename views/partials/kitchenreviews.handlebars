<h2 class="text-center">See what others are saying</h2>
<div class="container mb-0">
{{#each kitchens}}
{{#if comments}}
{{#each comments}}
            <div id = "reviews" class="-mx-3 md:flex items-start">
                <div class="px-3 md:w-1/3">
                    <div class="w-full mx-auto rounded-lg bg-white border border-gray-200 p-5 text-gray-800 font-light mb-6">
                        <div class="w-full flex mb-4 items-center">
                            <div class="overflow-hidden rounded-full w-10 h-10 bg-gray-50 border border-gray-200">
                                <img src="{{user.image_url}}" alt="">
                            </div>
                            <div class="flex-grow pl-3">
                                <h6 class="font-bold text-sm uppercase text-gray-600">{{this.user.name}}</h6>
                                <p class="text-right">{{rating}}/5 ‚≠ê</p>
                            </div>
                        </div>
                        <div class="w-full">
                            <p class="text-sm leading-tight"><span class="text-lg leading-none italic font-bold text-gray-400 mr-1">"</span>{{comment_body}}<span class="text-lg leading-none italic font-bold text-gray-400 ml-1">"</span></p>
                        </div>
                    </div>
                    </div>
                </div>
            
{{/each}}
{{/if}}
{{/each}}
</div>